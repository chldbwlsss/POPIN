<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.summer.popin.domain.message.dao.MessageMapper">
    <select id="allMessage"  resultType="MessageVO" parameterType="Integer">
        select
            no,sender_no,receiver_no,content,send_date,receive_date
        from
            message
        where
            sender_no=#{senderNo} or receiver_no=#{senderNo}
        order by
            send_date
    </select>
    <insert id="sendMessage" parameterType="MessageSendDTO">
        insert into
            message(no,sender_no,receiver_no,content,send_date)
        values
            (SEQ_MESSAGE.nextval,#{senderNo},#{receiverNo},#{content},sysdate)
    </insert>
</mapper>